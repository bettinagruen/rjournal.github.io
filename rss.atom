---
layout: null
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">

<title>The R Journal</title>
<id>http://journal.r-project.org/rss.atom</id>
<link href="http://journal.r-project.org/rss.atom" rel="self" />
<link href="http://journal.r-project.org" />

<author><name>The R Journal</name></author>
<updated>{{ site.time | date_to_xmlschema }}</updated>

<entry>
<title>Accepted Articles</title>
</entry>
{% for article in site.issues[0].articles %}
<entry>
  <id>http://journal.r-project.org/archive/accepted/{{ article.slug }}</id>
  <title>{{ article.title }}</title>
  <link href="http://journal.r-project.org/archive/accepted/{{article.slug}}.pdf" />
  {% for author in article.authors %}
  <author><name>{{ author }}</name></author>
  {% endfor %}

  <content type="xhtml"><div xmlns="http://www.w3.org/1999/xhtml">
    <p>Accepted article. Not yet published</p>
  </div></content>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
</entry>
{% endfor %}

{% for issue in site.issues %}
{% if forloop.rindex0 == 0 %}
<entry>
<id>http://journal.r-project.org/archive/{{issue.year}}-{{issue.num}}/</id>
<title>Volume {{issue.volume}}/{{issue.num}}, {{issue.month}} {{issue.year}}</title>
<link href="http://journal.r-project.org/archive/{{issue.year}}-{{issue.num}}/" />
</entry>
{% for article in issue.articles %}
  {% if article.heading %}
<entry>
<title>{{article.heading}}</title>
</entry>
  {% else %}
<entry>
  <id>http://journal.r-project.org/archive/{{issue.year}}-{{issue.num}}/{{article.slug}}.pdf</id>
  <title>{{ article.title }}</title>
  <link href="http://journal.r-project.org/archive/{{issue.year}}-{{issue.num}}/{{article.slug}}.pdf" />
  {% for author in article.authors %}
  <author><name>{{ author }}</name></author>
  {% endfor %}
  
  <content type="xhtml"><div xmlns="http://www.w3.org/1999/xhtml">
    <p>{{article.author | join: ", "}}. {{article.title}}. <i>The R Journal</i>, {{issue.volume}}({{issue.num}}):{{article.pages | join: "-"}}, {{issue.month}} {{issue.year}}.</p>
  </div></content>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
</entry>
{% endif %}
{% endfor %}
{% endif %}
{% endfor %}

</feed>
